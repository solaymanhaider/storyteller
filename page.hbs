{{!< default}}

{{> site-header}}
{{#post}}

<main id="site-main" class="site-main outer">
    <div class="container">
        <article class="card post-full {{post_class}}">
            <div class="single_post_container">
                <div class="single_post_header single_page_header" data-post-featured-image="{{img_url feature_image size="l"}}">
                    <div class="single_post_header_inner">
                        <div class="single_post_header_title">
                            <h1>{{title}}</h1>
                        </div>
                    </div>
                </div>
                <div class="single_post_content">
                    <section class="post-full-content">
                        <div class="post-content">
                            {{content}}
                        </div>
                    </section>
                </div>
            </div>
        </article>
    </div>
</main>
{{/post}}
{{#contentFor "scripts"}}
<script>
    $(document).ready(function () {
        var featuredImage = $(".single_post_header").data("post-featured-image");
        $('.single_post_header').css('background', 'url(' + featuredImage + ')');
        // FitVids - start
        var $postContent = $(".post-full-content");
        $postContent.fitVids();
        // FitVids - end
    });
</script>
{{/contentFor}}
